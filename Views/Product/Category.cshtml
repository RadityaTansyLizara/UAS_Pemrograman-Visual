@model IEnumerable<BabyShopWeb2.Models.Product>
@{
    ViewData["Title"] = ViewBag.Category.Name;
}

<div class="container py-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <div class="category-icon me-3">
                    <i class="@ViewBag.Category.IconClass fa-3x text-pink"></i>
                </div>
                <div>
                    <h1 class="fw-bold text-dark mb-1">@ViewBag.Category.Name</h1>
                    <p class="text-muted mb-0">@ViewBag.Category.Description</p>
                </div>
            </div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Beranda</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Produk</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Category.Name</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row g-4">
        @if (Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="product-card">
                        <div class="product-image">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid">
                            }
                            else
                            {
                                <div class="product-placeholder">
                                    <i class="@product.Category.IconClass fa-3x text-white"></i>
                                </div>
                            }
                            @if (product.DiscountPrice.HasValue)
                            {
                                <span class="discount-badge">DISKON</span>
                            }
                            @if (product.Stock <= 0)
                            {
                                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" style="background: rgba(0,0,0,0.7);">
                                    <span class="text-white fw-bold">STOK HABIS</span>
                                </div>
                            }
                        </div>
                        <div class="product-info p-3">
                            <h6 class="product-title mb-2">@product.Name</h6>
                            <div class="product-price mb-2">
                                @if (product.DiscountPrice.HasValue)
                                {
                                    <span class="price-original text-muted text-decoration-line-through">Rp @product.Price.ToString("N0")</span>
                                    <span class="price-discount text-pink fw-bold">Rp @product.DiscountPrice.Value.ToString("N0")</span>
                                }
                                else
                                {
                                    <span class="price-current text-pink fw-bold">Rp @product.Price.ToString("N0")</span>
                                }
                            </div>
                            <div class="mb-3">
                                @if (product.Stock <= 0)
                                {
                                    <span class="badge stock-out">Stok Habis</span>
                                }
                                else if (product.Stock <= 5)
                                {
                                    <span class="badge stock-low">Stok Terbatas (@product.Stock)</span>
                                }
                                else
                                {
                                    <span class="badge stock-available">Tersedia (@product.Stock)</span>
                                }
                            </div>
                            <div class="product-actions">
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-pink btn-sm me-2">
                                    <i class="fas fa-eye me-1"></i>Detail
                                </a>
                                @if (product.Stock > 0)
                                {
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn btn-pink btn-sm">
                                            <i class="fas fa-cart-plus me-1"></i>Beli
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm" disabled>
                                        <i class="fas fa-times me-1"></i>Habis
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="@ViewBag.Category.IconClass fa-5x text-muted mb-3"></i>
                    <h4 class="text-muted">Belum ada produk dalam kategori ini</h4>
                    <p class="text-muted">Produk akan segera ditambahkan</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-pink">Lihat Semua Produk</a>
                </div>
            </div>
        }
    </div>

    <!-- Back to Products -->
    <div class="row mt-5">
        <div class="col-12 text-center">
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-arrow-left me-2"></i>Kembali ke Semua Produk
            </a>
        </div>
    </div>
</div>

<style>
.category-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--pink-light) 0%, var(--pink-color) 100%);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}
</style>