@model IEnumerable<BabyShopWeb2.Models.Product>
@{
    ViewData["Title"] = "Kelola Produk";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Daftar Produk</h3>
    <a asp-action="CreateProduct" class="btn btn-pink">
        <i class="fas fa-plus me-2"></i>Tambah Produk Baru
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Gambar</th>
                            <th>Nama Produk</th>
                            <th>Kategori</th>
                            <th>Harga</th>
                            <th>Stok</th>
                            <th>Status</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    <div class="product-image-admin">
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid rounded">
                                        }
                                        else
                                        {
                                            <div class="product-placeholder-admin">
                                                <i class="@product.Category.IconClass fa-2x text-muted"></i>
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <strong>@product.Name</strong>
                                        <br>
                                        <small class="text-muted">@product.Description.Substring(0, Math.Min(50, product.Description.Length))...</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">
                                        <i class="@product.Category.IconClass me-1"></i>@product.Category.Name
                                    </span>
                                </td>
                                <td>
                                    @if (product.DiscountPrice.HasValue)
                                    {
                                        <div>
                                            <span class="text-muted text-decoration-line-through small">Rp @product.Price.ToString("N0")</span>
                                            <br>
                                            <strong class="text-danger">Rp @product.DiscountPrice.Value.ToString("N0")</strong>
                                        </div>
                                    }
                                    else
                                    {
                                        <strong>Rp @product.Price.ToString("N0")</strong>
                                    }
                                </td>
                                <td>
                                    @if (product.Stock <= 0)
                                    {
                                        <span class="badge bg-danger">Habis</span>
                                    }
                                    else if (product.Stock <= 5)
                                    {
                                        <span class="badge bg-warning">@product.Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@product.Stock</span>
                                    }
                                </td>
                                <td>
                                    @if (product.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Nonaktif</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete(@product.Id, '@product.Name')" title="Hapus">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Belum ada produk</h5>
                <p class="text-muted">Mulai dengan menambahkan produk pertama Anda</p>
                <a asp-action="CreateProduct" class="btn btn-pink">
                    <i class="fas fa-plus me-2"></i>Tambah Produk Baru
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Konfirmasi Hapus</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Apakah Anda yakin ingin menghapus produk <strong id="productName"></strong>?</p>
                <p class="text-danger small">
                    <i class="fas fa-exclamation-triangle me-1"></i>
                    Tindakan ini tidak dapat dibatalkan.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Hapus
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.product-image-admin {
    width: 60px;
    height: 60px;
    background: #f8f9fa;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.product-image-admin img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.product-placeholder-admin {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
</style>

@section Scripts {
    <script>
        function confirmDelete(productId, productName) {
            document.getElementById('productName').textContent = productName;
            document.getElementById('deleteForm').action = '@Url.Action("DeleteProduct")/' + productId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}