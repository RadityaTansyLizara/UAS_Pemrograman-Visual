@model IEnumerable<BabyShopWeb2.Models.Newsletter>
@{
    ViewData["Title"] = "Newsletter Subscribers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            <i class="fas fa-envelope-open-text me-2"></i>Newsletter Subscribers
        </h2>
        <div>
            <form asp-action="ExportNewsletters" method="post" class="d-inline">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-download me-2"></i>Export ke CSV
                </button>
            </form>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="stat-icon bg-pink-light mb-3">
                        <i class="fas fa-users fa-2x text-pink"></i>
                    </div>
                    <h3 class="fw-bold text-pink mb-0">@Model.Count()</h3>
                    <p class="text-muted mb-0">Total Subscribers</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="stat-icon bg-success-light mb-3">
                        <i class="fas fa-calendar-day fa-2x text-success"></i>
                    </div>
                    <h3 class="fw-bold text-success mb-0">@Model.Count(n => n.SubscribedAt.Date == DateTime.Today)</h3>
                    <p class="text-muted mb-0">Hari Ini</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="stat-icon bg-info-light mb-3">
                        <i class="fas fa-calendar-week fa-2x text-info"></i>
                    </div>
                    <h3 class="fw-bold text-info mb-0">@Model.Count(n => n.SubscribedAt >= DateTime.Today.AddDays(-7))</h3>
                    <p class="text-muted mb-0">7 Hari Terakhir</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <p class="text-muted">Belum ada subscriber newsletter</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th>Email</th>
                                <th>Tanggal Subscribe</th>
                                <th>Waktu</th>
                                <th style="width: 150px;">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int no = 1;
                            }
                            @foreach (var subscriber in Model)
                            {
                                <tr>
                                    <td class="text-center">@no</td>
                                    <td>
                                        <i class="fas fa-envelope text-pink me-2"></i>
                                        <strong>@subscriber.Email</strong>
                                    </td>
                                    <td>
                                        <i class="far fa-calendar me-1"></i>
                                        @subscriber.SubscribedAt.ToString("dd MMMM yyyy")
                                        @if (subscriber.SubscribedAt.Date == DateTime.Today)
                                        {
                                            <span class="badge bg-success ms-2">Hari Ini</span>
                                        }
                                        else if (subscriber.SubscribedAt >= DateTime.Today.AddDays(-7))
                                        {
                                            <span class="badge bg-info ms-2">Baru</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="far fa-clock me-1"></i>
                                            @subscriber.SubscribedAt.ToString("HH:mm")
                                        </small>
                                    </td>
                                    <td>
                                        <a href="mailto:@subscriber.Email" class="btn btn-sm btn-primary me-1" title="Kirim Email">
                                            <i class="fas fa-paper-plane"></i>
                                        </a>
                                        <form asp-action="DeleteSubscriber" asp-route-id="@subscriber.Id" 
                                              method="post" class="d-inline"
                                              onsubmit="return confirm('Yakin ingin menghapus subscriber ini?');">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Hapus">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                no++;
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h5 class="fw-bold mb-3">
                <i class="fas fa-lightbulb me-2 text-warning"></i>Tips Mengelola Newsletter
            </h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="tip-card mb-3">
                        <div class="d-flex align-items-start">
                            <div class="tip-icon bg-pink-light text-pink me-3">
                                <i class="fas fa-bullhorn"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Kirim Newsletter Rutin</h6>
                                <p class="text-muted small mb-0">Kirim update produk, promo, dan tips parenting secara berkala ke subscriber</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="tip-card mb-3">
                        <div class="d-flex align-items-start">
                            <div class="tip-icon bg-success-light text-success me-3">
                                <i class="fas fa-download"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Export Data</h6>
                                <p class="text-muted small mb-0">Download daftar email untuk digunakan di email marketing tools</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="tip-card mb-3">
                        <div class="d-flex align-items-start">
                            <div class="tip-icon bg-info-light text-info me-3">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Pantau Pertumbuhan</h6>
                                <p class="text-muted small mb-0">Lihat statistik subscriber harian dan mingguan untuk mengukur engagement</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="tip-card mb-3">
                        <div class="d-flex align-items-start">
                            <div class="tip-icon bg-warning-light text-warning me-3">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Jaga Privasi</h6>
                                <p class="text-muted small mb-0">Lindungi data email subscriber dan gunakan sesuai persetujuan mereka</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-pink {
        background-color: #FF69B4 !important;
    }
    
    .text-pink {
        color: #FF69B4 !important;
    }
    
    .bg-pink-light {
        background-color: rgba(255, 105, 180, 0.1) !important;
    }
    
    .bg-success-light {
        background-color: rgba(40, 167, 69, 0.1) !important;
    }
    
    .bg-info-light {
        background-color: rgba(23, 162, 184, 0.1) !important;
    }
    
    .bg-warning-light {
        background-color: rgba(255, 193, 7, 0.1) !important;
    }
    
    .stat-icon {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }
    
    .tip-card {
        padding: 15px;
        background: #f8f9fa;
        border-radius: 10px;
        border-left: 4px solid #FF69B4;
    }
    
    .tip-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .table tbody tr:hover {
        background-color: rgba(255, 105, 180, 0.05);
    }
</style>
