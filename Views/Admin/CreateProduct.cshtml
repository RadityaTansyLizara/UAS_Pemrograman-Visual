@model BabyShopWeb2.Models.ProductCreateViewModel
@{
    ViewData["Title"] = "Tambah Produk Baru";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-plus me-2"></i>Tambah Produk Baru
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Nama Produk *</label>
                                <input asp-for="Name" class="form-control" placeholder="Contoh: Johnson's Baby Shampoo">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label">Kategori *</label>
                                <select asp-for="CategoryId" class="form-select">
                                    <option value="">Pilih Kategori</option>
                                    @foreach (var category in (List<BabyShopWeb2.Models.Category>)ViewBag.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Deskripsi *</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Deskripsi produk yang menarik untuk pelanggan"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label">Harga Normal *</label>
                                <div class="input-group">
                                    <span class="input-group-text">Rp</span>
                                    <input asp-for="Price" type="number" class="form-control" step="0.01" placeholder="0">
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="DiscountPrice" class="form-label">Harga Diskon</label>
                                <div class="input-group">
                                    <span class="input-group-text">Rp</span>
                                    <input asp-for="DiscountPrice" type="number" class="form-control" step="0.01" placeholder="0">
                                </div>
                                <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                                <small class="form-text text-muted">Kosongkan jika tidak ada diskon</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Stock" class="form-label">Stok *</label>
                                <input asp-for="Stock" type="number" class="form-control" placeholder="0">
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label">Gambar Produk</label>
                        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(this)">
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                        <small class="form-text text-muted">Format: JPG, PNG, GIF. Maksimal 5MB</small>
                    </div>
                    
                    <div class="mb-3" id="imagePreview" style="display: none;">
                        <label class="form-label">Preview Gambar</label>
                        <div class="border rounded p-3 text-center">
                            <img id="preview" src="" alt="Preview" class="img-fluid" style="max-height: 200px;">
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Products" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Kembali
                        </a>
                        <button type="submit" class="btn btn-pink">
                            <i class="fas fa-save me-1"></i>Simpan Produk
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Tips Produk
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-pink">Nama Produk</h6>
                    <p class="small text-muted">Gunakan nama yang jelas dan mudah dicari. Contoh: "Johnson's Baby Shampoo No More Tears 200ml"</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-pink">Deskripsi</h6>
                    <p class="small text-muted">Jelaskan manfaat dan keunggulan produk. Sertakan informasi ukuran, bahan, dan cara penggunaan.</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-pink">Harga</h6>
                    <p class="small text-muted">Pastikan harga kompetitif. Gunakan harga diskon untuk produk promosi.</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-pink">Gambar</h6>
                    <p class="small text-muted">Gunakan gambar berkualitas tinggi dengan latar belakang bersih. Ukuran ideal: 800x800px.</p>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-star me-2"></i>Produk Populer
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled small">
                    <li class="mb-2">• Johnson's Baby Shampoo</li>
                    <li class="mb-2">• Cussons Baby Cream</li>
                    <li class="mb-2">• My Baby Minyak Telon</li>
                    <li class="mb-2">• Zwitsal Baby Powder</li>
                    <li class="mb-2">• Pigeon Baby Lotion</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}