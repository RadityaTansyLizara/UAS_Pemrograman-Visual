@model BabyShopWeb2.Models.Order
@{
    ViewData["Title"] = $"Detail Pesanan {Model.OrderNumber}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Detail Pesanan @Model.OrderNumber</h3>
    <div class="d-flex gap-2">
        <a asp-controller="Order" asp-action="Receipt" asp-route-id="@Model.Id" class="btn btn-outline-pink" target="_blank">
            <i class="fas fa-file-pdf me-1"></i>Download PDF
        </a>
        <a asp-action="Orders" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Kembali
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Order Items -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-shopping-bag me-2"></i>Produk yang Dipesan
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Produk</th>
                                <th>Harga</th>
                                <th>Qty</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="product-image-small me-3">
                                                @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                                                {
                                                    <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="img-fluid rounded">
                                                }
                                                else
                                                {
                                                    <div class="product-placeholder-small">
                                                        <i class="@item.Product.Category.IconClass"></i>
                                                    </div>
                                                }
                                            </div>
                                            <div>
                                                <strong>@item.Product.Name</strong>
                                                <br>
                                                <small class="text-muted">@item.Product.Category.Name</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>Rp @item.UnitPrice.ToString("N0")</td>
                                    <td>@item.Quantity</td>
                                    <td><strong>Rp @item.Subtotal.ToString("N0")</strong></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3">Subtotal</th>
                                <th>Rp @Model.SubTotal.ToString("N0")</th>
                            </tr>
                            <tr>
                                <th colspan="3">Ongkos Kirim</th>
                                <th>Rp @Model.ShippingCost.ToString("N0")</th>
                            </tr>
                            <tr class="table-active">
                                <th colspan="3">TOTAL</th>
                                <th class="text-pink">Rp @Model.TotalAmount.ToString("N0")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        
        <!-- Order Timeline -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i>Timeline Pesanan
                </h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item @(Model.Status >= BabyShopWeb2.Models.OrderStatus.Pending ? "completed" : "")">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h6>Pesanan Dibuat</h6>
                            <p class="text-muted mb-0">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                    
                    <div class="timeline-item @(Model.Status >= BabyShopWeb2.Models.OrderStatus.Processing ? "completed" : "")">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h6>Pesanan Diproses</h6>
                            <p class="text-muted mb-0">
                                @if (Model.Status >= BabyShopWeb2.Models.OrderStatus.Processing)
                                {
                                    @Model.OrderDate.AddHours(1).ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Menunggu</span>
                                }
                            </p>
                        </div>
                    </div>
                    
                    <div class="timeline-item @(Model.Status >= BabyShopWeb2.Models.OrderStatus.Shipped ? "completed" : "")">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h6>Pesanan Dikirim</h6>
                            <p class="text-muted mb-0">
                                @if (Model.ShippedDate.HasValue)
                                {
                                    @Model.ShippedDate.Value.ToString("dd/MM/yyyy HH:mm")
                                }
                                else if (Model.Status >= BabyShopWeb2.Models.OrderStatus.Shipped)
                                {
                                    @Model.OrderDate.AddDays(1).ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Menunggu</span>
                                }
                            </p>
                        </div>
                    </div>
                    
                    <div class="timeline-item @(Model.Status >= BabyShopWeb2.Models.OrderStatus.Delivered ? "completed" : "")">
                        <div class="timeline-marker"></div>
                        <div class="timeline-content">
                            <h6>Pesanan Terkirim</h6>
                            <p class="text-muted mb-0">
                                @if (Model.DeliveredDate.HasValue)
                                {
                                    @Model.DeliveredDate.Value.ToString("dd/MM/yyyy HH:mm")
                                }
                                else if (Model.Status >= BabyShopWeb2.Models.OrderStatus.Delivered)
                                {
                                    @Model.OrderDate.AddDays(3).ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Estimasi: @Model.OrderDate.AddDays(3).ToString("dd/MM/yyyy")</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <!-- Order Info -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informasi Pesanan
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label text-muted">Status Pesanan</label>
                    <div>
                        @switch (Model.Status)
                        {
                            case BabyShopWeb2.Models.OrderStatus.Pending:
                                <span class="badge bg-warning fs-6">Menunggu</span>
                                break;
                            case BabyShopWeb2.Models.OrderStatus.Processing:
                                <span class="badge bg-info fs-6">Diproses</span>
                                break;
                            case BabyShopWeb2.Models.OrderStatus.Shipped:
                                <span class="badge bg-primary fs-6">Dikirim</span>
                                break;
                            case BabyShopWeb2.Models.OrderStatus.Delivered:
                                <span class="badge bg-success fs-6">Terkirim</span>
                                break;
                            case BabyShopWeb2.Models.OrderStatus.Cancelled:
                                <span class="badge bg-danger fs-6">Dibatalkan</span>
                                break;
                        }
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Tanggal Pesanan</label>
                    <div>@Model.OrderDate.ToString("dd MMMM yyyy, HH:mm")</div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Total Items</label>
                    <div>@Model.OrderItems.Sum(oi => oi.Quantity) produk</div>
                </div>
                
                @if (Model.Status != BabyShopWeb2.Models.OrderStatus.Delivered && Model.Status != BabyShopWeb2.Models.OrderStatus.Cancelled)
                {
                    <hr>
                    <div class="d-grid gap-2">
                        @if (Model.Status == BabyShopWeb2.Models.OrderStatus.Pending)
                        {
                            <button class="btn btn-info btn-sm" onclick="updateStatus(@Model.Id, 'Processing')">
                                <i class="fas fa-play me-1"></i>Proses Pesanan
                            </button>
                        }
                        @if (Model.Status == BabyShopWeb2.Models.OrderStatus.Processing)
                        {
                            <button class="btn btn-primary btn-sm" onclick="updateStatus(@Model.Id, 'Shipped')">
                                <i class="fas fa-shipping-fast me-1"></i>Kirim Pesanan
                            </button>
                        }
                        @if (Model.Status == BabyShopWeb2.Models.OrderStatus.Shipped)
                        {
                            <button class="btn btn-success btn-sm" onclick="updateStatus(@Model.Id, 'Delivered')">
                                <i class="fas fa-check me-1"></i>Tandai Terkirim
                            </button>
                        }
                        <button class="btn btn-outline-danger btn-sm" onclick="updateStatus(@Model.Id, 'Cancelled')">
                            <i class="fas fa-times me-1"></i>Batalkan Pesanan
                        </button>
                    </div>
                }
            </div>
        </div>
        
        <!-- Customer Info -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-user me-2"></i>Informasi Pelanggan
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label text-muted">Nama</label>
                    <div><strong>@Model.CustomerName</strong></div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Email</label>
                    <div>@Model.CustomerEmail</div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Telepon</label>
                    <div>@Model.CustomerPhone</div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted">Alamat Pengiriman</label>
                    <div>@Model.ShippingAddress</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Status Update Form -->
<form id="statusUpdateForm" method="post" asp-action="UpdateOrderStatus" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" id="orderId" name="id" />
    <input type="hidden" id="orderStatus" name="status" />
</form>

<style>
.product-image-small {
    width: 50px;
    height: 50px;
    background: #f8f9fa;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.product-image-small img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.product-placeholder-small {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6c757d;
}

.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #dee2e6;
}

.timeline-item {
    position: relative;
    margin-bottom: 30px;
}

.timeline-marker {
    position: absolute;
    left: -23px;
    top: 5px;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: #dee2e6;
    border: 3px solid #fff;
    box-shadow: 0 0 0 2px #dee2e6;
}

.timeline-item.completed .timeline-marker {
    background: #ff6b9d;
    box-shadow: 0 0 0 2px #ff6b9d;
}

.timeline-content h6 {
    margin-bottom: 5px;
    color: #495057;
}

.timeline-item.completed .timeline-content h6 {
    color: #ff6b9d;
    font-weight: 600;
}
</style>

@section Scripts {
    <script>
        function updateStatus(orderId, status) {
            const statusText = {
                'Processing': 'memproses',
                'Shipped': 'mengirim',
                'Delivered': 'menandai sebagai terkirim',
                'Cancelled': 'membatalkan'
            };
            
            if (confirm(`Apakah Anda yakin ingin ${statusText[status]} pesanan ini?`)) {
                document.getElementById('orderId').value = orderId;
                document.getElementById('orderStatus').value = status;
                document.getElementById('statusUpdateForm').submit();
            }
        }
    </script>
}