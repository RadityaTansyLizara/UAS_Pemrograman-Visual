@model BabyShopWeb2.Models.ContactMessage
@{
    ViewData["Title"] = "Detail Pesan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="mb-4">
        <a asp-action="Messages" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Kembali ke Daftar Pesan
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h4 class="fw-bold mb-2">@Model.Subject</h4>
                            <div class="text-muted">
                                <small>
                                    <i class="far fa-clock me-1"></i>
                                    @Model.CreatedAt.ToString("dddd, dd MMMM yyyy HH:mm")
                                </small>
                            </div>
                        </div>
                        @if (Model.IsRead)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-double me-1"></i>Sudah Dibaca
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-info">
                                <i class="fas fa-circle me-1"></i>Belum Dibaca
                            </span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4 pb-3 border-bottom">
                        <div class="d-flex align-items-center mb-3">
                            <div class="avatar-circle bg-pink text-white me-3">
                                <i class="fas fa-user"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-0">@Model.Name</h5>
                                <a href="mailto:@Model.Email" class="text-decoration-none">
                                    <i class="fas fa-envelope me-1"></i>@Model.Email
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="message-content">
                        <h6 class="text-muted mb-3">Isi Pesan:</h6>
                        <div class="p-4 bg-light rounded">
                            <p class="mb-0" style="white-space: pre-wrap;">@Model.Message</p>
                        </div>
                    </div>

                    @if (Model.IsRead && Model.ReadAt.HasValue)
                    {
                        <div class="mt-4 pt-3 border-top">
                            <small class="text-muted">
                                <i class="fas fa-check-double me-1"></i>
                                Dibaca pada: @Model.ReadAt.Value.ToString("dd MMMM yyyy HH:mm")
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-white">
                    <h5 class="fw-bold mb-0">
                        <i class="fas fa-cog me-2"></i>Aksi
                    </h5>
                </div>
                <div class="card-body">
                    <a href="mailto:@Model.Email?subject=Re: @Model.Subject" 
                       class="btn btn-primary w-100 mb-2">
                        <i class="fas fa-reply me-2"></i>Balas via Email
                    </a>
                    
                    @if (!Model.IsRead)
                    {
                        <form asp-action="MarkAsRead" asp-route-id="@Model.Id" method="post" class="mb-2">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-check me-2"></i>Tandai Sudah Dibaca
                            </button>
                        </form>
                    }
                    
                    <form asp-action="DeleteMessage" asp-route-id="@Model.Id" 
                          method="post"
                          onsubmit="return confirm('Yakin ingin menghapus pesan ini?');">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fas fa-trash me-2"></i>Hapus Pesan
                        </button>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="fw-bold mb-0">
                        <i class="fas fa-info-circle me-2"></i>Informasi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">Nama Pengirim</small>
                        <strong>@Model.Name</strong>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">Email</small>
                        <a href="mailto:@Model.Email" class="text-decoration-none">
                            @Model.Email
                        </a>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">Tanggal Dikirim</small>
                        <strong>@Model.CreatedAt.ToString("dd MMMM yyyy")</strong><br>
                        <small class="text-muted">@Model.CreatedAt.ToString("HH:mm")</small>
                    </div>
                    <div>
                        <small class="text-muted d-block mb-1">Status</small>
                        @if (Model.IsRead)
                        {
                            <span class="badge bg-success">Sudah Dibaca</span>
                        }
                        else
                        {
                            <span class="badge bg-info">Belum Dibaca</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }
    
    .bg-pink {
        background-color: #FF69B4 !important;
    }
    
    .message-content {
        font-size: 15px;
        line-height: 1.6;
    }
</style>
