@model BabyShopWeb2.Models.ProductEditViewModel
@{
    ViewData["Title"] = "Edit Produk";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Edit Produk: @Model.Name
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="CurrentImageUrl" type="hidden" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Nama Produk *</label>
                                <input asp-for="Name" class="form-control" placeholder="Contoh: Johnson's Baby Shampoo">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label">Kategori *</label>
                                <select asp-for="CategoryId" class="form-select">
                                    <option value="">Pilih Kategori</option>
                                    @foreach (var category in (List<BabyShopWeb2.Models.Category>)ViewBag.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Deskripsi *</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Deskripsi produk yang menarik untuk pelanggan"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label">Harga Normal *</label>
                                <div class="input-group">
                                    <span class="input-group-text">Rp</span>
                                    <input asp-for="Price" type="number" class="form-control" step="0.01" placeholder="0">
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="DiscountPrice" class="form-label">Harga Diskon</label>
                                <div class="input-group">
                                    <span class="input-group-text">Rp</span>
                                    <input asp-for="DiscountPrice" type="number" class="form-control" step="0.01" placeholder="0">
                                </div>
                                <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                                <small class="form-text text-muted">Kosongkan jika tidak ada diskon</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Stock" class="form-label">Stok *</label>
                                <input asp-for="Stock" type="number" class="form-control" placeholder="0">
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="ImageFile" class="form-label">Gambar Produk</label>
                                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(this)">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                                <small class="form-text text-muted">Format: JPG, PNG, GIF. Maksimal 5MB. Kosongkan jika tidak ingin mengubah gambar.</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                    <label asp-for="IsActive" class="form-check-label">
                                        Produk Aktif
                                    </label>
                                </div>
                                <small class="form-text text-muted">Nonaktifkan untuk menyembunyikan produk dari toko</small>
                            </div>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.CurrentImageUrl))
                    {
                        <div class="mb-3">
                            <label class="form-label">Gambar Saat Ini</label>
                            <div class="border rounded p-3">
                                <img src="@Model.CurrentImageUrl" alt="Current Image" class="img-fluid" style="max-height: 200px;">
                            </div>
                        </div>
                    }
                    
                    <div class="mb-3" id="imagePreview" style="display: none;">
                        <label class="form-label">Preview Gambar Baru</label>
                        <div class="border rounded p-3 text-center">
                            <img id="preview" src="" alt="Preview" class="img-fluid" style="max-height: 200px;">
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Products" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Kembali
                        </a>
                        <button type="submit" class="btn btn-pink">
                            <i class="fas fa-save me-1"></i>Simpan Perubahan
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Tips Edit Produk
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-pink">Gambar Produk</h6>
                    <p class="small text-muted">Upload gambar baru hanya jika ingin mengubah. Gambar lama akan tetap digunakan jika tidak ada upload baru.</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-pink">Status Aktif</h6>
                    <p class="small text-muted">Nonaktifkan produk untuk menyembunyikan dari katalog tanpa menghapus data.</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-pink">Harga Diskon</h6>
                    <p class="small text-muted">Kosongkan field harga diskon untuk menghilangkan diskon dari produk.</p>
                </div>
                
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Perhatian:</strong> Perubahan harga akan mempengaruhi pesanan baru, tidak mempengaruhi pesanan yang sudah ada.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}