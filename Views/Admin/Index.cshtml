@model BabyShopWeb2.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-baby-theme.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        /* üìÖ Custom Flatpickr Styling */
        .flatpickr-calendar {
            border-radius: 20px !important;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15) !important;
            border: 3px solid #FF6B9D !important;
        }
        
        .flatpickr-day.selected {
            background: #FF6B9D !important;
            border-color: #FF6B9D !important;
        }
        
        .flatpickr-day:hover {
            background: #FFE5EC !important;
            border-color: #FF6B9D !important;
        }
        
        .flatpickr-months {
            background: linear-gradient(135deg, #FF6B9D 0%, #C44569 100%) !important;
            border-radius: 17px 17px 0 0 !important;
        }
        
        .flatpickr-current-month {
            color: white !important;
        }
        
        .flatpickr-weekday {
            color: #FF6B9D !important;
            font-weight: 600 !important;
        }
        
        /* Date Picker Button Styling */
        .date-picker-btn {
            cursor: pointer !important;
            transition: all 0.3s ease;
            position: relative;
            user-select: none;
        }
        
        .date-picker-btn:hover {
            transform: translateY(-5px) scale(1.05) !important;
            box-shadow: 0 15px 40px rgba(212, 181, 255, 0.5) !important;
        }
        
        .date-picker-btn:active {
            transform: translateY(-2px) scale(1.03) !important;
        }
        
        .date-picker-btn::after {
            content: 'üìÖ';
            position: absolute;
            top: 5px;
            right: 5px;
            font-size: 20px;
            opacity: 0.7;
            animation: bounce 2s ease-in-out infinite;
            pointer-events: none;
        }
        }
    </style>
}

<div class="container-fluid" style="animation: fadeInUp 0.6s ease; padding-top: 0.5rem; padding-bottom: 1rem;">
    
    <!-- üéÄ Welcome Header -->
    <div class="row" style="margin-bottom: 1rem;">
        <div class="col-12">
            <div class="baby-card" style="background: linear-gradient(135deg, #FFE5EC 0%, #E3F2FD 100%); border: none; padding: 0.75rem 1rem; margin-bottom: 0;">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
