                            <th>Total</th>
                            <th>Status</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td>
                                    <strong style="color: #FFB6C1;">@order.OrderNumber</strong>
                                </td>
                                <td>
                                    <div>
                                        <strong>@order.CustomerName</strong>
                                        <br>
                                        <small style="color: #8B8B8B;">@order.CustomerPhone</small>
                                    </div>
                                </td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <strong style="color: #A8E6CF;">Rp @order.TotalAmount.ToString("N0")</strong>
                                </td>
                                <td>
                                    @switch (order.Status)
                                    {
                                        case OrderStatus.Pending:
                                            <span class="badge-baby badge-baby-warning">‚è≥ Menunggu</span>
                                            break;
                                        case OrderStatus.Processing:
                                            <span class="badge-baby badge-baby-info">üîÑ Diproses</span>
                                            break;
                                        case OrderStatus.Shipped:
                                            <span class="badge-baby badge-baby-info">üöö Dikirim</span>
                                            break;
                                        case OrderStatus.Delivered:
                                            <span class="badge-baby badge-baby-success">‚úÖ Terkirim</span>
                                            break;
                                        case OrderStatus.Cancelled:
                                            <span class="badge-baby badge-baby-danger">‚ùå Dibatalkan</span>
                                            break;
                                    }
                                </td>
                                <td>
