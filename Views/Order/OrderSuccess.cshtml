@model BabyShopWeb2.Models.Order
@{
    ViewData["Title"] = "Pesanan Berhasil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Message -->
            <div class="text-center mb-5">
                <div class="success-icon mb-4">
                    <i class="fas fa-check-circle fa-5x text-success"></i>
                </div>
                <h1 class="fw-bold text-dark mb-3">Pesanan Berhasil Dibuat!</h1>
                <p class="lead text-muted">Terima kasih telah berbelanja di BabyShop3Berlian</p>
            </div>

            <!-- Order Details -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-receipt me-2"></i>Detail Pesanan
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold text-pink">Nomor Pesanan</h6>
                            <p class="fs-5 fw-bold text-dark">@Model.OrderNumber</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold text-pink">Tanggal Pesanan</h6>
                            <p class="fs-6">@Model.OrderDate.ToString("dd MMMM yyyy, HH:mm")</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="fw-bold text-pink">Informasi Pelanggan</h6>
                            <p class="mb-1"><strong>Nama:</strong> @Model.CustomerName</p>
                            <p class="mb-1"><strong>Email:</strong> @Model.CustomerEmail</p>
                            <p class="mb-1"><strong>Telepon:</strong> @Model.CustomerPhone</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold text-pink">Alamat Pengiriman</h6>
                            <p>@Model.ShippingAddress</p>
                        </div>
                    </div>

                    <!-- Order Items -->
                    <h6 class="fw-bold text-pink mb-3">Item Pesanan</h6>
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <thead class="bg-light">
                                <tr>
                                    <th>Produk</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Harga</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="product-image-tiny me-3">
                                                    @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                                    {
                                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="img-fluid rounded">
                                                    }
                                                    else
                                                    {
                                                        <div class="product-placeholder-tiny">
                                                            <i class="@(item.Product?.Category?.IconClass ?? "fas fa-box") text-pink"></i>
                                                        </div>
                                                    }
                                                </div>
                                                <div>
                                                    <h6 class="mb-1">@(item.Product?.Name ?? "Produk")</h6>
                                                    <small class="text-muted">@(item.Product?.Category?.Name ?? "Kategori")</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">Rp @item.UnitPrice.ToString("N0")</td>
                                        <td class="text-end fw-bold">Rp @item.Subtotal.ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Order Summary -->
                    <div class="row justify-content-end">
                        <div class="col-md-4">
                            <div class="bg-light p-3 rounded">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal:</span>
                                    <span>Rp @Model.SubTotal.ToString("N0")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Ongkos Kirim:</span>
                                    <span>@(Model.ShippingCost == 0 ? "GRATIS" : "Rp " + Model.ShippingCost.ToString("N0"))</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between fw-bold fs-5">
                                    <span>Total:</span>
                                    <span class="text-pink">Rp @Model.TotalAmount.ToString("N0")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Next Steps -->
            <div class="card mb-4">
                <div class="card-body">
                    <h6 class="fw-bold text-pink mb-3">
                        <i class="fas fa-info-circle me-2"></i>Langkah Selanjutnya
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-4 text-center">
                            <div class="step-item">
                                <div class="step-icon mb-2">
                                    <i class="fas fa-phone fa-2x text-pink"></i>
                                </div>
                                <h6 class="fw-bold">1. Konfirmasi</h6>
                                <p class="small text-muted">Tim kami akan menghubungi Anda dalam 1x24 jam</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="step-item">
                                <div class="step-icon mb-2">
                                    <i class="fas fa-credit-card fa-2x text-pink"></i>
                                </div>
                                <h6 class="fw-bold">2. Pembayaran</h6>
                                <p class="small text-muted">Lakukan pembayaran sesuai instruksi yang diberikan</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="step-item">
                                <div class="step-icon mb-2">
                                    <i class="fas fa-shipping-fast fa-2x text-pink"></i>
                                </div>
                                <h6 class="fw-bold">3. Pengiriman</h6>
                                <p class="small text-muted">Pesanan akan dikirim dalam 1-2 hari kerja</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="text-center">
                <a asp-action="DownloadReceipt" asp-route-id="@Model.Id" class="btn btn-pink btn-lg me-3">
                    <i class="fas fa-download me-2"></i>Download Struk PDF
                </a>
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-shopping-bag me-2"></i>Belanja Lagi
                </a>
            </div>

            <!-- Contact Info -->
            <div class="text-center mt-4">
                <p class="text-muted">
                    Ada pertanyaan? Hubungi kami di 
                    <a href="tel:+6281234567890" class="text-pink fw-bold">+62 812-3456-7890</a> atau 
                    <a href="mailto:info@babyshop3berlian.com" class="text-pink fw-bold">info@babyshop3berlian.com</a>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
.success-icon {
    animation: bounceIn 1s ease-out;
}

@@keyframes bounceIn {
    0% { transform: scale(0.3); opacity: 0; }
    50% { transform: scale(1.05); }
    70% { transform: scale(0.9); }
    100% { transform: scale(1); opacity: 1; }
}

.product-image-tiny {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--pink-light) 0%, var(--pink-color) 100%);
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.product-image-tiny img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.product-placeholder-tiny {
    color: white;
    font-size: 1.2rem;
}

.step-item {
    padding: 20px;
    border-radius: 10px;
    background: #f8f9fa;
    height: 100%;
}

.step-icon {
    opacity: 0.8;
}
</style>