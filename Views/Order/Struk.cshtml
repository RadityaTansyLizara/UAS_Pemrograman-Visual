@model BabyShopWeb2.Models.Order
@{
    ViewData["Title"] = $"Struk Pesanan {Model.OrderNumber}";
}

<div class="struk-container">
    <!-- Decorative Background Elements -->
    <div class="struk-bg-decoration">
        <div class="decoration-circle circle-1"></div>
        <div class="decoration-circle circle-2"></div>
        <div class="decoration-circle circle-3"></div>
    </div>

    <div class="container py-5 position-relative">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Success Header with Animation -->
                <div class="text-center mb-5">
                    <div class="success-icon-wrapper mb-4">
                        <div class="success-circle-bg"></div>
                        <i class="fas fa-check-circle success-icon"></i>
                        <div class="success-confetti">
                            <span>üéâ</span>
                            <span>‚ú®</span>
                            <span>üéä</span>
                            <span>üíù</span>
                            <span>‚≠ê</span>
                        </div>
                    </div>
                    <h1 class="fw-bold mb-3 white-text">
                        @if (TempData["Success"] != null)
                        {
                            @if (Model.Notes != null && Model.Notes.Contains("Metode Pembayaran: Cash"))
                            {
                                <span>Pembayaran Tunai Dikonfirmasi!</span>
                            }
                            else
                            {
                                <span>Pembayaran Berhasil!</span>
                            }
                        }
                        else
                        {
                            <span>Pesanan Berhasil Dibuat!</span>
                        }
                    </h1>
                    <p class="lead white-text-secondary mb-0">
                        @if (TempData["Success"] != null)
                        {
                            @TempData["Success"]
                        }
                        else
                        {
                            <span>Terima kasih telah berbelanja di BabyShop3Berlian</span>
                        }
                    </p>
                </div>

            <!-- Struk Card with Modern Design -->
            <div class="struk-card mb-5">
                <!-- Header with Gradient -->
                <div class="struk-header">
                    <div class="row align-items-center">
                        <div class="col-md-6 text-center text-md-start">
                            <div class="company-logo-section">
                                <div class="logo-icon">
                                    <i class="fas fa-baby"></i>
                                </div>
                                <div class="company-info">
                                    <h2 class="company-name mb-1">BabyShop3Berlian</h2>
                                    <p class="company-tagline mb-0">Toko Perlengkapan Bayi Terpercaya</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                            <div class="receipt-badge">
                                <i class="fas fa-receipt me-2"></i>STRUK PEMBELIAN
                            </div>
                        </div>
                    </div>
                    <div class="header-divider"></div>
                    <div class="company-contact">
                        <div class="row g-2 text-center text-md-start">
                            <div class="col-md-6">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                <small>Jl. Ganesha No. 99, Kp. Rengasbandung, Desa Karangsambung, Kec. Kedungwaringin, Bekasi</small>
                            </div>
                            <div class="col-md-3">
                                <i class="fas fa-phone me-2"></i>
                                <small>+62 812-3456-7890</small>
                            </div>
                            <div class="col-md-3">
                                <i class="fas fa-envelope me-2"></i>
                                <small>info@babyshop3berlian.com</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="struk-body">
                    <!-- Order & Customer Info Cards -->
                    <div class="row g-4 mb-4">
                        <!-- Order Info Card -->
                        <div class="col-md-6">
                            <div class="info-card order-info-card">
                                <div class="info-card-header">
                                    <i class="fas fa-file-invoice me-2"></i>
                                    <span>Informasi Pesanan</span>
                                </div>
                                <div class="info-card-body">
                                    <div class="info-row">
                                        <span class="info-label">No. Pesanan</span>
                                        <span class="info-value order-number">@Model.OrderNumber</span>
                                    </div>
                                    <div class="info-row">
                                        <span class="info-label">Tanggal</span>
                                        <span class="info-value">@Model.OrderDate.ToString("dd MMMM yyyy, HH:mm")</span>
                                    </div>
                                    <div class="info-row">
                                        <span class="info-label">Status</span>
                                        <span class="info-value">
                                            @if (Model.Status == BabyShopWeb2.Models.OrderStatus.Pending)
                                            {
                                                <span class="status-badge status-pending">
                                                    <i class="fas fa-clock me-1"></i>Menunggu Pembayaran
                                                </span>
                                            }
                                            else if (Model.Status == BabyShopWeb2.Models.OrderStatus.Processing)
                                            {
                                                <span class="status-badge status-success">
                                                    <i class="fas fa-check-circle me-1"></i>Selesai
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-badge status-info">@Model.Status</span>
                                            }
                                        </span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.Notes) && Model.Notes.Contains("Metode Pembayaran:"))
                                    {
                                        <div class="info-row">
                                            <span class="info-label">Metode Bayar</span>
                                            <span class="info-value">
                                                @{
                                                    var paymentMethod = Model.Notes.Split('|').FirstOrDefault(x => x.Contains("Metode Pembayaran:"))?.Replace("Metode Pembayaran:", "").Trim();
                                                }
                                                @if (paymentMethod == "Cash")
                                                {
                                                    <span class="payment-badge payment-cash">
                                                        <i class="fas fa-money-bill-wave me-1"></i>Tunai
                                                    </span>
                                                }
                                                else if (!string.IsNullOrEmpty(paymentMethod))
                                                {
                                                    <span class="payment-badge payment-digital">
                                                        <i class="fas fa-mobile-alt me-1"></i>@paymentMethod
                                                    </span>
                                                }
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Customer Info Card -->
                        <div class="col-md-6">
                            <div class="info-card customer-info-card">
                                <div class="info-card-header">
                                    <i class="fas fa-user me-2"></i>
                                    <span>Data Pelanggan</span>
                                </div>
                                <div class="info-card-body">
                                    <div class="info-row">
                                        <span class="info-label">Nama</span>
                                        <span class="info-value">@Model.CustomerName</span>
                                    </div>
                                    <div class="info-row">
                                        <span class="info-label">Telepon</span>
                                        <span class="info-value">@Model.CustomerPhone</span>
                                    </div>
                                    <div class="info-row">
                                        <span class="info-label">Alamat</span>
                                        <span class="info-value">@Model.ShippingAddress</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Products Section -->
                    <div class="products-section mb-4">
                        <div class="section-title">
                            <i class="fas fa-shopping-bag me-2"></i>
                            <span>Detail Pembelian</span>
                        </div>
                        
                        <div class="products-list">
                            @foreach (var item in Model.OrderItems)
                            {
                                <div class="product-item">
                                    <div class="product-image-wrapper">
                                        @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                        {
                                            <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="product-image">
                                        }
                                        else
                                        {
                                            <div class="product-image-placeholder">
                                                <i class="@(item.Product?.Category?.IconClass ?? "fas fa-box")"></i>
                                            </div>
                                        }
                                        <div class="product-qty-badge">@item.Quantity</div>
                                    </div>
                                    <div class="product-details">
                                        <h6 class="product-name">@(item.Product?.Name ?? "Produk")</h6>
                                        <p class="product-category">
                                            <i class="fas fa-tag me-1"></i>@(item.Product?.Category?.Name ?? "Kategori")
                                        </p>
                                        <div class="product-price-info">
                                            <span class="unit-price">Rp @item.UnitPrice.ToString("N0") √ó @item.Quantity</span>
                                        </div>
                                    </div>
                                    <div class="product-total">
                                        <div class="total-label">Subtotal</div>
                                        <div class="total-amount">Rp @item.Subtotal.ToString("N0")</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Payment Summary -->
                    <div class="payment-summary">
                        <div class="summary-row">
                            <span class="summary-label">Subtotal</span>
                            <span class="summary-value">Rp @Model.SubTotal.ToString("N0")</span>
                        </div>
                        <div class="summary-row">
                            <span class="summary-label">Ongkos Kirim</span>
                            <span class="summary-value">
                                @if (Model.ShippingCost == 0)
                                {
                                    <span class="free-shipping">
                                        <i class="fas fa-gift me-1"></i>GRATIS
                                    </span>
                                }
                                else
                                {
                                    <span>Rp @Model.ShippingCost.ToString("N0")</span>
                                }
                            </span>
                        </div>
                        <div class="summary-divider"></div>
                        <div class="summary-row summary-total">
                            <span class="summary-label">TOTAL PEMBAYARAN</span>
                            <span class="summary-value">Rp @Model.TotalAmount.ToString("N0")</span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="notes-section">
                            <i class="fas fa-sticky-note me-2"></i>
                            <strong>Catatan:</strong> @Model.Notes
                        </div>
                    }
                </div>

                <!-- Footer -->
                <div class="struk-footer">
                    <div class="thank-you-message">
                        <i class="fas fa-heart me-2"></i>
                        Terima kasih telah berbelanja di BabyShop3Berlian!
                    </div>
                    <div class="footer-info">
                        <span>Untuk pertanyaan, hubungi customer service kami</span>
                        <span class="separator">‚Ä¢</span>
                        <span>Kasir: @(Model.CashierName ?? "Admin BabyShop")</span>
                        <span class="separator">‚Ä¢</span>
                        <span>Dicetak: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</span>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center mb-4">
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-action="DownloadReceipt" asp-route-id="@Model.Id" class="btn btn-pink btn-lg me-md-2">
                        <i class="fas fa-download me-2"></i>Download PDF
                    </a>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-white-outline btn-lg">
                        <i class="fas fa-shopping-bag me-2"></i>Belanja Lagi
                    </a>
                </div>
            </div>

            <!-- Next Steps -->
            <div class="card border-0 bg-light">
                <div class="card-body">
                    <h5 class="text-pink fw-bold mb-3 text-center">
                        <i class="fas fa-info-circle me-2"></i>Langkah Selanjutnya
                    </h5>
                    <div class="row g-4">
                        <div class="col-md-4 text-center">
                            <div class="step-box">
                                <div class="step-icon mb-3">
                                    <i class="fas fa-phone fa-3x text-pink"></i>
                                </div>
                                <h6 class="fw-bold">1. Konfirmasi</h6>
                                <p class="small text-muted">Tim kami akan menghubungi Anda dalam 1x24 jam untuk konfirmasi pesanan</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="step-box">
                                <div class="step-icon mb-3">
                                    <i class="fas fa-credit-card fa-3x text-pink"></i>
                                </div>
                                <h6 class="fw-bold">2. Pembayaran</h6>
                                <p class="small text-muted">Lakukan pembayaran sesuai instruksi yang akan diberikan</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="step-box">
                                <div class="step-icon mb-3">
                                    <i class="fas fa-shipping-fast fa-3x text-pink"></i>
                                </div>
                                <h6 class="fw-bold">3. Pengiriman</h6>
                                <p class="small text-muted">Pesanan akan dikirim dalam 1-2 hari kerja setelah pembayaran</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Info -->
            <div class="text-center mt-4">
                <p class="white-text-secondary">
                    Ada pertanyaan? Hubungi kami di 
                    <a href="tel:+6281234567890" class="text-white fw-bold text-decoration-none">+62 812-3456-7890</a>
                </p>
            </div>
        </div>
    </div>
</div>

