<!-- Products Section - Cute Theme -->
<section id="products" class="products-section-cute py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <div class="section-title-cute">
                    <span class="title-emoji">🎁</span>
                    <h2 class="fw-bold mb-3">Kategori Produk Populer</h2>
                    <p class="text-muted">Pilihan lengkap untuk kebutuhan si kecil</p>
                </div>
            </div>
        </div>
        <div class="row g-4">
            @if (Model.Categories.Any())
            {
                @foreach (var category in Model.Categories)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="category-card-cute">
                            <div class="category-icon-cute">
                                <i class="@category.IconClass"></i>
                            </div>
                            <div class="category-content-cute">
                                <h5 class="fw-bold mb-2">@category.Name</h5>
                                <p class="text-muted mb-3">@category.Description</p>
                                <a asp-controller="Product" asp-action="Category" asp-route-id="@category.Id" class="btn-cute-category">
                                    Lihat Produk <i class="fas fa-arrow-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Kategori sedang dimuat...</h4>
                    <p class="text-muted">Silakan refresh halaman jika kategori tidak muncul</p>
                </div>
            }
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="featured-products-section-cute py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <div class="section-title-cute">
                    <span class="title-emoji">🛍️</span>
                    <h2 class="fw-bold mb-3">Produk Terbaru</h2>
                    <p class="text-muted">Koleksi terbaru dengan kualitas terbaik</p>
                </div>
            </div>
        </div>
        <div class="row g-4">
            @if (Model.FeaturedProducts.Any())
            {
                @foreach (var product in Model.FeaturedProducts)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="product-card-cute">
                            <div class="product-image-cute">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid">
                                }
                                else
                                {
                                    <div class="product-placeholder-cute">
                                        <i class="@product.Category.IconClass fa-3x"></i>
                                    </div>
                                }
                                @if (product.DiscountPrice.HasValue)
                                {
                                    <span class="discount-badge-cute">🎉 DISKON</span>
                                }
                            </div>
                            <div class="product-info-cute p-3">
                                <h6 class="product-title-cute mb-2">@product.Name</h6>
                                <p class="product-category-cute text-muted small mb-2">
                                    <i class="fas fa-tag me-1"></i>@product.Category.Name
                                </p>
                                <div class="product-price-cute mb-3">
                                    @if (product.DiscountPrice.HasValue)
                                    {
                                        <span class="price-original-cute text-muted text-decoration-line-through">Rp @product.Price.ToString("N0")</span>
                                        <span class="price-discount-cute fw-bold">Rp @product.DiscountPrice.Value.ToString("N0")</span>
                                    }
                                    else
                                    {
                                        <span class="price-current-cute fw-bold">Rp @product.Price.ToString("N0")</span>
                                    }
                                </div>
                                <div class="product-actions-cute">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn-product-detail">
                                        <i class="fas fa-eye me-1"></i>Detail
                                    </a>
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="btn-product-buy">
                                            <i class="fas fa-cart-plus me-1"></i>Beli
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Produk sedang dimuat...</h4>
                    <p class="text-muted">Silakan refresh halaman jika produk tidak muncul</p>
                </div>
            }
        </div>
        <div class="row mt-5">
            <div class="col-12 text-center">
                <a asp-controller="Product" asp-action="Index" class="btn-view-all-cute">
                    <i class="fas fa-shopping-bag me-2"></i>Lihat Semua Produk
                </a>
            </div>
        </div>
    </div>
</section>

