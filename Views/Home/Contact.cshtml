@{
    ViewData["Title"] = "Kontak Kami";
}

<link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />

<!-- Hero Section -->
<section class="contact-hero py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold text-dark mb-3">Hubungi Kami</h1>
                <p class="lead text-muted">
                    Ada pertanyaan? Kami siap membantu Anda! Hubungi kami melalui form di bawah atau kontak langsung.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="py-5">
    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        <div class="row g-4">
            <!-- Contact Form -->
            <div class="col-lg-7">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h3 class="fw-bold mb-4">Kirim Pesan</h3>
                        <form asp-action="Contact" method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Nama Lengkap</label>
                                    <input type="text" name="name" class="form-control" placeholder="Masukkan nama Anda" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-medium">Email</label>
                                    <input type="email" name="email" class="form-control" placeholder="email@example.com" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label fw-medium">Subjek</label>
                                    <input type="text" name="subject" class="form-control" placeholder="Subjek pesan" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label fw-medium">Pesan</label>
                                    <textarea name="message" class="form-control" rows="5" placeholder="Tulis pesan Anda di sini..." required></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-pink btn-lg w-100">
                                        <i class="fas fa-paper-plane me-2"></i>Kirim Pesan
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Contact Info -->
            <div class="col-lg-5">
                <div class="contact-info-wrapper">
                    <!-- Address -->
                    <div class="contact-info-card mb-4">
                        <div class="icon-wrapper bg-pink-light">
                            <i class="fas fa-map-marker-alt fa-2x text-pink"></i>
                        </div>
                        <div class="info-content">
                            <h5 class="fw-bold mb-2">Alamat</h5>
                            <p class="text-muted mb-0">
                                Toko Susu Tiga Berlian<br>
                                Jl. Ganesha, Karangsambung<br>
                                Kec. Kedungwaringin<br>
                                Kabupaten Bekasi, Jawa Barat 17540
                            </p>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div class="contact-info-card mb-4">
                        <div class="icon-wrapper bg-blue-light">
                            <i class="fas fa-phone fa-2x text-primary"></i>
                        </div>
                        <div class="info-content">
                            <h5 class="fw-bold mb-2">Telepon</h5>
                            <p class="text-muted mb-1">
                                <a href="tel:+6281234567890" class="text-decoration-none text-muted">
                                    +62 812-3456-7890
                                </a>
                            </p>
                            <p class="text-muted mb-0">
                                <a href="tel:+6281234567891" class="text-decoration-none text-muted">
                                    +62 812-3456-7891
                                </a>
                            </p>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="contact-info-card mb-4">
                        <div class="icon-wrapper bg-yellow-light">
                            <i class="fas fa-envelope fa-2x text-warning"></i>
                        </div>
                        <div class="info-content">
                            <h5 class="fw-bold mb-2">Email</h5>
                            <p class="text-muted mb-1">
                                <a href="mailto:info@babyshop3berlian.com" class="text-decoration-none text-muted">
                                    info@babyshop3berlian.com
                                </a>
                            </p>
                            <p class="text-muted mb-0">
                                <a href="mailto:support@babyshop3berlian.com" class="text-decoration-none text-muted">
                                    support@babyshop3berlian.com
                                </a>
                            </p>
                        </div>
                    </div>

                    <!-- Working Hours -->
                    <div class="contact-info-card">
                        <div class="icon-wrapper bg-success-light">
                            <i class="fas fa-clock fa-2x text-success"></i>
                        </div>
                        <div class="info-content">
                            <h5 class="fw-bold mb-2">Jam Operasional</h5>
                            <p class="text-muted mb-0">Senin - Minggu: 07:00 - 20:00</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Social Media Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h3 class="fw-bold mb-4">Ikuti Kami di Social Media</h3>
                <p class="text-muted mb-4">
                    Dapatkan update produk terbaru, promo menarik, dan tips parenting!
                </p>
                <div class="social-icons-large">
                    <a href="#" class="social-icon-large facebook">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social-icon-large instagram">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="social-icon-large twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="social-icon-large whatsapp">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                    <a href="#" class="social-icon-large youtube">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section (Optional) -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3 class="fw-bold mb-4 text-center">Lokasi Kami</h3>
                <div class="map-container">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3964.3447!2d107.0!3d-6.2!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNsKwMTInMDAuMCJTIDEwN8KwMDAnMDAuMCJF!5e0!3m2!1sen!2sid!4v1234567890"
                        width="100%" 
                        height="400" 
                        style="border:0; border-radius: 15px;" 
                        allowfullscreen="" 
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                    <div class="text-center mt-3">
                        <p class="text-muted mb-2">
                            <i class="fas fa-map-marker-alt text-pink me-2"></i>
                            Toko Susu Tiga Berlian, Jl. Ganesha, Karangsambung, Kec. Kedungwaringin, Kabupaten Bekasi, Jawa Barat 17540
                        </p>
                        <a href="https://maps.app.goo.gl/M3cjtoiqpTC8Wbon8" target="_blank" class="btn btn-outline-pink btn-sm">
                            <i class="fas fa-directions me-2"></i>Buka di Google Maps
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
