<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BabyShop3Berlian</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="BabyShop3Berlian - Toko perlengkapan bayi terpercaya dengan kualitas terbaik untuk si kecil tercinta. Belanja pakaian bayi, mainan, perlengkapan makan, dan perawatan bayi." />
    <meta name="keywords" content="toko bayi, perlengkapan bayi, pakaian bayi, mainan bayi, baby shop, toko online bayi" />
    <meta name="author" content="BabyShop3Berlian" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>👶</text></svg>" />
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BabyShopWeb2.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-baby text-pink me-2"></i>BabyShop3Berlian
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Beranda
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-controller="Product" asp-action="Index">
                                <i class="fas fa-shopping-bag me-1"></i>Produk
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle me-1"></i>Tentang Kami
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-phone me-1"></i>Kontak
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-primary me-2 position-relative">
                            <i class="fas fa-shopping-cart me-1"></i>Keranjang
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cart-count" style="display: none;">
                                0
                            </span>
                        </a>
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-pink me-2">
                            <i class="fas fa-cog me-1"></i>Admin
                        </a>
                        <a href="#" class="btn btn-primary">
                            <i class="fas fa-user me-1"></i>Masuk
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-0">
        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5 class="text-pink mb-3">
                        <i class="fas fa-baby me-2"></i>BabyShop3Berlian
                    </h5>
                    <p class="text-light-gray">Toko perlengkapan bayi terpercaya dengan kualitas terbaik untuk si kecil tercinta.</p>
                    <div class="social-links">
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-whatsapp"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="text-pink mb-3">Kategori</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light-gray text-decoration-none">Pakaian Bayi</a></li>
                        <li><a href="#" class="text-light-gray text-decoration-none">Mainan</a></li>
                        <li><a href="#" class="text-light-gray text-decoration-none">Perlengkapan Makan</a></li>
                        <li><a href="#" class="text-light-gray text-decoration-none">Perawatan</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="text-pink mb-3">Kontak</h6>
                    <p class="text-light-gray mb-2">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        Jl. Ganesha No. 99, Kp. Rengasbandung, Desa Karangsambung, Kec. Kedungwaringin, Bekasi
                    </p>
                    <p class="text-light-gray mb-2">
                        <i class="fas fa-phone me-2"></i>
                        +62 812-3456-7890
                    </p>
                    <p class="text-light-gray">
                        <i class="fas fa-envelope me-2"></i>
                        info@babyshop3berlian.com
                    </p>
                </div>
                <div class="col-lg-3 mb-4">
                    <h6 class="text-pink mb-3">Newsletter</h6>
                    <p class="text-light-gray mb-3">Dapatkan info promo dan produk terbaru</p>
                    <form asp-controller="Newsletter" asp-action="Subscribe" method="post">
                        <div class="input-group">
                            <input type="email" name="email" class="form-control" placeholder="Email Anda" required>
                            <button class="btn btn-pink" type="submit">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <hr class="my-4 border-secondary">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-light-gray mb-0">&copy; 2025 BabyShop3Berlian. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="text-light-gray text-decoration-none me-3">Privacy Policy</a>
                    <a href="#" class="text-light-gray text-decoration-none">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>